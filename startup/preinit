# XEN CLEAN INSTALLER
# Startup script
#
# by Andrew Peace

# load USB modules before the shell or the installer:
usb-discover

if grep -q 'bash-shell' /proc/cmdline ; then
    echo "Exiting this shell will run the installer:"
    echo " /opt/xensource/installer/init"
    echo
    echo "Use -c to this command to override the kernel command-line during startup"
    echo 
    echo "The kernel command-line was:"
    cat /proc/cmdline
    echo "---"
    /bin/bash
fi

/opt/xensource/installer/init

